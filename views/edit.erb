<div>
  <form action="/tasks/<%= @task.id %>" method="post">
    <div>
      <div>
        <input type="text" name="title" placreholder="タイトル" value="<%= CGI.escapeHTML(@task.title) %>"><br>
        <input type="text" name="due_date" placreholder="〆切" value="<%= @task.due_date %>"><br>
        リスト:
        <select name="list">
          <% List.all.each do |list| %>
            <option value="<%= list.id %>"
              <% if list.id == @task.list.id %>
                selected
              <% end %>>
              <%=list.name%>
            </option>
          <% end %>
        </select>
      </div>
      <div>
        <input type="submit" value="登録">
      </div>
    </div>
  </form>
</div>